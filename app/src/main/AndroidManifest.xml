<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uofsc.com.breatheeasier2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".licenseAgreement"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NavigationActivity" />
        <activity
            android:name=".trainingActivity"
            android:parentActivityName=".NavigationActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavigationActivity" />
        </activity>
        <activity
            android:name=".dailyActivity"
            android:parentActivityName=".NavigationActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavigationActivity" />
        </activity>
        <activity
            android:name=".communitiesActivity"
            android:parentActivityName=".NavigationActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavigationActivity" />
        </activity>
        <activity
            android:name=".exercisesActivity"
            android:parentActivityName=".NavigationActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavigationActivity" />
        </activity>
        <activity android:name=".welcomeActivity" />
        <activity android:name=".userMain"></activity>
        <activity android:name=".aboutActivity"
            android:parentActivityName=".NavigationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavigationActivity" />
        </activity>
    </application>

</manifest>