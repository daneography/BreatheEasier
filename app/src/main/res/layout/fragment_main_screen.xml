<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frame_layout"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_gravity="top|center"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo72ppi" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/instruction_rec"
        android:text="Welcome to Breathe Easier, this is the main menu."
        android:textColor="@android:color/white"
        />

    <GridLayout
        android:id="@+id/mainScreenGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:context=".mainScreen"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnMindfulness"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="Mindfulness"
            android:textSize="20dp"

            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnCommunities"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:textSize="20dp"

            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"

            android:text="Communities"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnDaily"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@color/colorPrimary"
            android:textSize="20dp"

            android:text="Daily"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnExercise"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:textSize="20dp"

            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="Exercise"
            android:textColor="@android:color/white" />

    </GridLayout>

</LinearLayout>