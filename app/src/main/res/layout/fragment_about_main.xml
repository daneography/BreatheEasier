<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aboutMain_layout"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dyad1b" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/instruction_rec"
        android:text="You may access various information here. Your profile, how to use the app and more information about the intevetion offered by the app"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="My Profile"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="80px" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="View Tutorial again"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="80px" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnEvidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evidence Based Intervention"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="80px"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnRef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="References"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="80px"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnFinDisc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Financial Disclosure"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="80px"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="80px"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>

    </LinearLayout>


</LinearLayout>
